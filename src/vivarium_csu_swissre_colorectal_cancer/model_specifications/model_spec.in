components:
    vivarium_public_health:
        population:
            - BasePopulation()
            - Mortality()
        risks:
            - Risk('risk_factor.family_history_or_adenoma')
            - RiskEffect('risk_factor.family_history_or_adenoma', 'sequela.preclinical_colon_and_rectum_cancer.incidence_rate')

    vivarium_csu_swissre_colorectal_cancer.components:
        - ColorectalCancer()
        - MortalityObserver()
        - DisabilityObserver()
        - StateMachineObserver('colon_and_rectum_cancer')
#        - LogNormalRiskEffect('risk_factor.family_history_or_adenoma',
#               'sequela.preclinical_colon_and_rectum_cancer.incidence_rate')

configuration:
    input_data:
        location: {{ location_proper }}
        input_draw_number: 0
        artifact_path: {{ artifact_directory }}/{{ location_sanitized }}.hdf
    interpolation:
        order: 0
        extrapolate: True
    randomness:
        map_size: 1_000_000
        key_columns: ['entrance_time', 'age']
        random_seed: 0
    time:
        start:
            year: 2020
            month: 1
            day: 1
        end:
            year: 2040
            month: 12
            day: 31
        step_size: 36.5 # Days
    population:
        population_size: 20_000
        age_start: 15
        age_end: 95
        # need to include 95+ age_bin

    family_history_or_adenoma:
        exposure: 0.10


    effect_of_family_history_or_adenoma_on_preclinical_colon_and_rectum_cancer:
        incidence_rate:
            relative_risk: 2.3
#            mean: 0.01
#            se: 0.001

    metrics:
        disability:
            by_age: False
            by_sex: True
            by_year: True
        mortality:
            by_age: False
            by_sex: True
            by_year: True
        colon_and_rectum_cancer:
            by_age: False
            by_sex: True
            by_year: True
